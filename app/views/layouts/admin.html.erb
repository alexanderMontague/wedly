<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Wedly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="font-sans m-0 bg-bg-admin">
    <nav class="bg-secondary text-white py-4">
      <div class="max-w-container mx-auto flex justify-between items-center px-4">
        <div>
          <%= link_to "Wedly Admin", admin_root_path, class: "text-white no-underline text-2xl font-bold" %>
        </div>
        <div class="flex gap-6 items-center">
          <%= link_to "Dashboard", admin_root_path, class: "nav-link" %>
          <%= link_to "Events", admin_events_path, class: "nav-link" %>
          <%= link_to "Guests", admin_guests_path, class: "nav-link" %>
          <%= link_to "Households", admin_households_path, class: "nav-link" %>
          <%= link_to "Invitations", admin_invitations_path, class: "nav-link" %>
          <%= link_to "Settings", admin_settings_path, class: "nav-link" %>
          <%= button_to "Logout", admin_logout_path, method: :delete, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </nav>

    <main class="max-w-container mx-auto my-8 px-4">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-error"><%= flash[:alert] %></div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
