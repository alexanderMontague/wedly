<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Wedly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="font-sans m-0 bg-bg-admin">
    <div class="admin-shell">
      <aside class="admin-side-nav print:hidden">
        <div>
          <%= link_to "Wedly Admin", admin_root_path, class: "admin-side-nav-brand" %>
        </div>

        <nav class="admin-side-nav-links">
          <%= admin_nav_link("Dashboard", admin_root_path, exact: true) %>
          <%= admin_nav_link("Events", admin_events_path, active_prefixes: [admin_events_path]) %>
          <%= admin_nav_link("Guests", admin_guests_path, active_prefixes: [admin_guests_path]) %>
          <%= admin_nav_link("Households", admin_households_path, active_prefixes: [admin_households_path]) %>
          <%= admin_nav_link("Invitations", admin_invitations_path, active_prefixes: [admin_invitations_path]) %>
          <%= admin_nav_link("Disposable Photos", admin_disposable_photos_path, active_prefixes: [admin_disposable_photos_path]) %>
          <%= admin_nav_link("Settings", admin_settings_path, exact: true) %>
        </nav>

        <%= button_to "Logout", admin_logout_path, method: :delete, class: "btn btn-sm btn-danger w-full mt-4" %>
      </aside>

      <main class="admin-main">
        <div class="print:hidden">
          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-error"><%= flash[:alert] %></div>
          <% end %>
        </div>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
