<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Households</h1>
    <%= link_to "New Household", new_admin_household_path, class: "btn btn-primary" %>
  </div>

  <% if @households.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Guests</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @households.each do |household| %>
          <tr>
            <td><%= household.name %></td>
            <td><%= household.guest_names %></td>
            <td class="actions">
              <%= link_to "Edit", edit_admin_household_path(household), class: "btn btn-secondary" %>
              <%= button_to "Delete", admin_household_path(household), method: :delete, 
                            data: { confirm: "Are you sure? This will also delete all guests in this household." }, 
                            class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No households created yet.</p>
  <% end %>
</div>
