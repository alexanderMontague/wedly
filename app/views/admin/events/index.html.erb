<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Events</h1>
    <%= link_to "New Event", new_admin_event_path, class: "btn btn-primary" %>
  </div>

  <% if @events.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Date & Time</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.datetime&.strftime("%B %d, %Y at %I:%M %p") || "TBD" %></td>
            <td><%= event.location %></td>
            <td class="actions">
              <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-secondary" %>
              <%= button_to "Delete", admin_event_path(event), method: :delete, 
                            data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No events scheduled yet.</p>
  <% end %>
</div>
