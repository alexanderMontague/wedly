<% ceremony_time_val = current_wedding.ceremony_time.is_a?(Hash) ? current_wedding.ceremony_time["time"] : current_wedding.ceremony_time %>

<div class="invitation-front invitation-panel bg-stone-50 p-6 flex flex-col justify-between relative overflow-hidden">
  <div class="absolute inset-0 invitation-background-pattern text-stone-300 opacity-20" aria-hidden="true"></div>
  <div class="absolute top-0 left-0 w-14 h-14 overflow-hidden pointer-events-none">
    <%= render "botanical_accent", placement: "top-left" %>
  </div>
  <div class="relative z-10">
    <p class="text-xs tracking-[0.2em] uppercase text-stone-500 font-light mb-4" style="font-family: var(--font-body);">
      To <%= household.display_name %>
    </p>
    <div class="flex justify-between items-start">
      <div class="wedding-divider h-8"></div>
      <p class="text-xs tracking-widest uppercase text-stone-500 font-light text-right max-w-[55%]" style="font-family: var(--font-body);">
        you are invited to the wedding of
      </p>
    </div>
  </div>
  <h2 class="relative z-10 text-4xl sm:text-5xl lg:text-6xl font-display font-normal text-stone-800 tracking-wide my-6" style="font-family: var(--font-display);">
    <%= current_wedding.title %>
  </h2>
  <div class="relative z-10 text-right space-y-2">
    <% if current_wedding.date %>
      <p class="text-sm tracking-wider text-stone-600 font-light" style="font-family: var(--font-body);">
        <%= format_date_invitation(current_wedding.date) %>
      </p>
    <% end %>
    <% if ceremony_time_val.present? %>
      <p class="text-sm tracking-wider text-stone-600 font-light" style="font-family: var(--font-body);">
        at <%= ceremony_time_val.downcase %>
      </p>
    <% end %>
    <% if current_wedding.venue.present? %>
      <p class="text-sm tracking-wider text-stone-600 font-light" style="font-family: var(--font-body);">
        <%= current_wedding.venue["name"] %>
      </p>
      <p class="text-sm text-stone-500 font-light" style="font-family: var(--font-body);">
        <%= full_venue_name(current_wedding.venue) %>
      </p>
    <% end %>
  </div>
  <p class="relative z-10 text-sm italic text-stone-500 font-light text-center mt-6" style="font-family: var(--font-body);">
    reception to follow
  </p>
  <div class="absolute bottom-0 right-0 w-14 h-14 overflow-hidden pointer-events-none">
    <%= render "botanical_accent", placement: "bottom-right" %>
  </div>
</div>
