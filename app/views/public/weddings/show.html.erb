<div class="hero">
  <h1><%= @wedding.title %></h1>
  <% if @wedding.date %>
    <p><%= @wedding.date.strftime("%B %d, %Y") %></p>
  <% end %>
  <% if @wedding.location %>
    <p><%= @wedding.location %></p>
  <% end %>
</div>

<div class="container">
  <% if @events.any? %>
    <div class="section">
      <h2 class="section-title">Event Schedule</h2>
      <% @events.each do |event| %>
        <div class="event-card">
          <h3><%= event.name %></h3>
          <% if event.datetime %>
            <p><strong>When:</strong> <%= event.datetime.strftime("%B %d, %Y at %I:%M %p") %></p>
          <% end %>
          <% if event.location %>
            <p><strong>Where:</strong> <%= event.location %></p>
          <% end %>
          <% if event.description.present? %>
            <p><%= event.description %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="section text-center">
    <h2 class="section-title">We Hope You Can Join Us</h2>
    <p class="text-xl mb-card text-muted">
      Have you received your invitation? Click below to RSVP.
    </p>
  </div>
</div>
