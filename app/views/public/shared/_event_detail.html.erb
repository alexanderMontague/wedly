<%# Event detail card with icon, title, and content %>
<div class="text-center animate-on-scroll <%= local_assigns[:delay_class] %>" data-scroll-animate-target="item">
  <div class="event-icon-circle">
    <%= render "public/shared/icon", name: icon %>
  </div>
  <h3 class="text-2xl mb-4 font-display text-stone-800">
    <%= title %>
  </h3>
  <%= yield %>
</div>
