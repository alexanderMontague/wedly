<%= render "public/shared/envelope" do %>
  <div class="text-center space-y-6 mb-8">
    <%= render "public/shared/divider", height: 8 %>
    <div class="mb-6"></div>
    <p class="uppercase tracking-[0.3em] text-[10px] text-stone-500 font-light">
      Save the Date
    </p>
    <h2 class="text-4xl font-display font-light text-stone-800">
      <%= current_wedding.title %>
    </h2>
    <div class="w-16 h-px mx-auto bg-stone-300"></div>
  </div>

  <div class="space-y-6 text-center mb-8">
    <p class="text-stone-600 font-light leading-relaxed max-w-md mx-auto">
      We are delighted to announce our wedding and would be honored to have you celebrate with us on this special day.
    </p>

    <% if current_wedding.date %>
      <div class="py-6 border-y border-stone-200">
        <p class="text-3xl font-display font-light text-stone-800 mb-2">
          <%= format_date_elegant(current_wedding.date) %>
        </p>
        <% if current_wedding.ceremony_time %>
          <p class="text-lg text-stone-600 font-light">
            <%= current_wedding.ceremony_time %>
          </p>
        <% end %>
      </div>
    <% end %>

    <% if current_wedding.venue %>
      <div class="space-y-1">
        <p class="text-stone-600 font-light"><%= current_wedding.venue['name'] %></p>
        <p class="text-sm text-stone-500 font-light">
          <%= full_venue_name(current_wedding.venue) %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="text-center space-y-4">
    <% if current_wedding&.date %>
      <%= link_to calendar_url,
          target: "_blank",
          rel: "noopener noreferrer",
          class: "btn-wedding-primary inline-block" do %>
        Add to Calendar
      <% end %>
    <% end %>
    <p class="text-xs text-stone-400 font-light">
      Formal invitation to follow
    </p>
  </div>
<% end %>
